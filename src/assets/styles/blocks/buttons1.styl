.button1
  &__btn
    position relative
    display inline-block
    padding 12px 36px
    margin 10px
    color #000
    background alpha(#e2fcff,0.9)
    border-radius 40px
    font-size 18px
    text-decoration none
    letter-spacing 2px
    overflow hidden

.button1__elem
  left 0
  top 0
  position absolute
  background #000
  transform translate(-50%,-50%)
  pointer-events none;
  border-radius 50%
  animation-name animatee
  animation animatee 1s linear infinite 

@keyframes animatee
  0%
    width 0
    height 0
    opacity 0.5
  
  100%
    width 500px
    height 500px
    opacity 0
