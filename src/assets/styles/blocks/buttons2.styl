.button2
  position relative
  display flex
  flex-direction column
  align-items center

  &__btn
    position relative
    width 150px
    height 55px
    text-align center
    line-height 55px
    margin 10px
    text-transform uppercase
    background #191919
    color #fff
    font-size 18px
    font-weight 500
    text-decoration none
    letter-spacing 2px
    overflow hidden

    &:hover
      .button2__btn-item
        transition .4s ease-in
        transform translateY(-100%)

    &:hover
      &:before
        bottom -150px


    
    &:before
      content ''
      position absolute
      bottom -250px
      left 50%
      transform translateX(-50%)
      width 250px
      height 250px
      background #fce8f4
      border-radius 50%
      transition 0.4s ease-in;

  &__btn-item
    position relative
    display block
    width 100%
    height 100%
    z-index 100000
    transition 0s ease-in


