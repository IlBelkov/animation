.page
  
  &__wrapper
    display flex
    width 100%
    position fixed
    top 0
    left 0
  
.section
  flex-direction column
  min-width 100%
  display flex
  justify-content center
  background #fffee1
  height 100vh
  align-items center

  &:nth-child(2)
    background #e2fcff
  &:nth-child(3)
    background #d0eaff
  &:nth-child(4)
    background #fce8f4
  
  &__content
    max-width 800px
    margin-bottom 40px
    text-align center
  
  &__title
    font-size 4em
    color #111

  &__text
    font-size 1.3em
    line-height 1.4em
    color #111
  
  &__animation-wrapper
    display flex
    justify-content center

.loader
  position relative
  width 200px
  height 200px
  border 5px solid #fffee1
  border-radius 50%
  overflow hidden
  box-shadow -5px -5px 5px rgba(255,255,255,0.1),
    10px 10px 10px rgba(0,0,0,0.4),
    inset -5px -5px 5px rgba(255,255,255,0.2),
    inset 10px 10px 10px rgba(0,0,0,0.4)

  &:before
    content '';
    position absolute
    top 25px
    left 25px
    right 25px
    bottom 25px
    background #fffee1
    border-radius 50%
    border 2px solid #fffee1
    box-shadow inset -2px -2px 5px rgba(255,255,255,0.2),
     inset 3px 3px 5px rgba(0,0,0,0.4)
    z-index 10
  
  &__item
    position absolute
    width 100%
    height 100%
    left 0
    border-radius 50%
    background linear-gradient(#14ffe0,#ffeb3b,#ff00e0)
    filter blur(20px)
    animation animate 0.5s linear infinite
  
@keyframes animate
  0%
    transform rotate(0deg)

  100%
    transform rotate(360deg)

+below(md-breakpoint)
  .page
    &__wrapper
      position absolute
      flex-direction column
      height auto
      transform none !important
